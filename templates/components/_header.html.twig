{% set current_route = app.request.attributes.get('_route') %}
<nav>
    <div class="main-navigation">
        <div class="top-bar">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="top-bar__links">
                            <a href="{{ path('change_locale', { locale: language_code.getOppositeLocale }) }}"><span
                                    class="material-icons">language</span> {{ language_code.getOppositeLocale|upper }}
                            </a>
                            {% if app.user %}
                                <a href="{{ path('profile_index') }}">{{ app.user.username }}<span
                                        class="material-icons">account_circle</span></a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="navigation-wrapper">
            <div class="collapsed-navigation">
                <div class="collapsed-navigation__content">
                    <div class="collapsed-navigation__menu-items">
                        <a href="{{ path('home_index') }}"
                           class="collapsed-navigation__item"><span
                                class="material-icons">home</span>{{ 'navigation.home'|trans }}</a>
                        <a href="{{ path('blog_index') }}"
                           class="collapsed-navigation__item"><span
                                class="material-icons">rss_feed</span>{{ 'navigation.blog'|trans }}</a>
                        {% if app.user is null %}
                            <a href="{{ path('user_login') }}"
                               class="collapsed-navigation__item"><span
                                    class="material-icons">login</span>{{ 'navigation.login'|trans }}</a>
                        {% elseif app.user %}
                            <a href="{{ path('user_logout') }}"
                               class="collapsed-navigation__item"><span
                                    class="material-icons">logout</span>{{ 'navigation.logout'|trans }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-10 col-md-4">
                        <div class="top-logo"></div>
                    </div>
                    <div class="col-2 col-md-8">
                        <div class="navigation">
                            <a href="{{ path('home_index') }}"
                               class="navigation__item{% if current_route == 'homepage' %} navigation__item_active{% endif %}"><span
                                    class="material-icons">home</span> {{ 'navigation.home'|trans }}</a>
                            <a href="{{ path('blog_index') }}"
                               class="navigation__item{% if current_route == 'blog_index' %} navigation__item_active{% endif %}"><span
                                    class="material-icons">rss_feed</span>{{ 'navigation.blog'|trans }}</a>
                            {% if app.user is null %}
                                <a href="{{ path('user_login') }}"
                                   class="navigation__item{% if current_route == 'user_login' %} navigation__item_active{% endif %}"><span
                                        class="material-icons">login</span>{{ 'navigation.login'|trans }}</a>
                            {% elseif app.user %}
                                <a href="{{ path('user_logout') }}"
                                   class="navigation__item"><span
                                        class="material-icons">logout</span>{{ 'navigation.logout'|trans }}</a>
                            {% endif %}
                        </div>
                        <div class="navigation-wrapper__bars">
                            <i class="bi bi-list"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
