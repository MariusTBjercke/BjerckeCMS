{% extends "grid/base.html.twig" %}
{% set css = "home" %}
{% set controller = "home" %}

{% block title %}Home{% endblock %}

{% block maincontent %}

    <div class="container">
        <div class="row">
            <div class="col">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success float-end">
                        {{ message }}
                    </div>
                {% endfor %}

                {% if app.user is not null %} {{ app.user.username }} {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
